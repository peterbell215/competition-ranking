<% content_for :title, "Competition Results" %>

<div class="results-container">
  <h1>Competition Results</h1>

  <%= render 'results_section', category: :commercial %>
  <%= render 'results_section', category: :technical %>
  <%= render 'results_section', category: :overall %>
</div>

<style>
  .results-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .results-section {
    margin-bottom: 2em;
  }
  
  .pure-table {
    width: 100%;
    margin-bottom: 1em;
  }
  
  .section-header {
    background-color: #f0f0f0;
    font-weight: bold;
    text-align: center;
  }
  
  /* Highlight winners */
  tbody tr:first-child td {
    font-weight: bold;
    background-color: #fafafa;
  }
  
  /* Responsive layout */
  @media (max-width: 768px) {
    .pure-table {
      font-size: 0.85em;
    }
  }
</style>