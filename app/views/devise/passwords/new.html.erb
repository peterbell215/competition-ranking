<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-3">
    <!-- Empty column for larger screens -->
  </div>

  <div class="pure-u-1 pure-u-md-1-3">
    <div class="login-container">
      <h2 class="content-head is-center">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "pure-form pure-form-stacked" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <fieldset>
          <div class="pure-control-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "pure-input-1" %>
          </div>

          <div class="pure-controls">
            <%= f.submit "Send me reset password instructions", class: "pure-button pure-button-primary pure-input-1" %>
          </div>
        </fieldset>
      <% end %>

      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

  <div class="pure-u-1 pure-u-md-1-3">
    <!-- Empty column for larger screens -->
  </div>
</div>
