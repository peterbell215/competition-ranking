<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-3">
    <!-- Empty column for larger screens -->
  </div>

  <div class="pure-u-1 pure-u-md-1-3">
    <div class="login-container">
      <h2 class="content-head is-center"><%= t "devise.invitations.edit.header" %></h2>

      <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "pure-form pure-form-stacked" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :invitation_token, readonly: true %>

        <fieldset>
          <% if f.object.class.require_password_on_accepting %>
            <div class="pure-control-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <span class="password-hint">(<%= @minimum_password_length %> characters minimum)</span>
              <% end %>
              <%= f.password_field :password, class: "pure-input-1" %>
            </div>

            <div class="pure-control-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: "pure-input-1" %>
            </div>
          <% end %>

          <div class="pure-controls">
            <%= f.submit t("devise.invitations.edit.submit_button"), class: "pure-button pure-button-primary pure-input-1" %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>

  <div class="pure-u-1 pure-u-md-1-3">
    <!-- Empty column for larger screens -->
  </div>
</div>
